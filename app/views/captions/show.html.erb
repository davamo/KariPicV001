<div>   <%= link_to "Back to captions", captions_path, class: 'btn btn-success'  %>
</div>

<p style="color: green"><%= notice %></p>

<%= render @caption %>



<h2>Comments</h2>
<div class="mb-3">
    <%= render partial: 'comments', locals: { comment: @comment } %>
</div>
<h2>Add a Comment</h2>

<%= form_with(model: [@caption, Comment.new], local: true) do |form| %>
<div class="mb-3">
    <%= form.text_area :content, placeholder: 'Write your comment...' %>
</div>
<div class="mb-3">
    <%= form.submit 'Save', class: 'btn btn-primary active' %>
</div>
<% end %>




<div>
  <%= link_to "Edit this caption", edit_caption_path(@caption), class: 'btn btn-success'  %> |

  <i class="bi bi-dash-circle"></i><%= button_to "Destroy this caption", @caption, method: :delete, class: 'btn btn-success'  %>

</div>
